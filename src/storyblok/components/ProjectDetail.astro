---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
import { Image } from "astro:assets";
---

<div
    class="border bg-card text-card-foreground shadow-sm w-full rounded-xl overflow-hidden"
>
    <Image
        src={blok.project_detail_header_img.filename}
        alt={blok.project_detail_header_img.alt}
        width={768}
        height={200}
        class="object-cover object-center h-40 w-full"
    />

    <div {...storyblokEditable(blok)} class="space-y-6 px-4">
        <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl lg:text-6xl">
            {blok.project_name}
        </h1>
        <div
            class="flex items-center justify-center space-x-4 my-4 sm:justify-start"
        >
            <a
                class="bg-black hover:bg-yellow-500 hover:text-black text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out"
                href={blok.project_live_url.url}
            >
                View Project
            </a>
            <a
                class="bg-black hover:bg-yellow-500 hover:text-black text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out"
                href={blok.project_github_url.url}
            >
                GitHub
            </a>
        </div>
    </div>

    <div class="divide-y border-gray-200">
        <div
            class="container grid max-w-5xl items-center justify-center gap-4 px-4 py-4 md:gap-8 md:px-6 md:py-8"
        >
            <div class="grid grid-cols-1 items-center justify-center gap-4">
                <div class="space-y-2">
                    <h3 class="text-2xl font-bold text-center">Details</h3><p
                        class="text-sm text-gray-500 dark:text-gray-400"
                    >
                        {blok.project_details_body}
                    </p>
                </div>
                <div class="space-y-2">
                    <h3 class="text-2xl font-bold text-center">Challenges</h3><p
                        class="text-sm text-gray-500 dark:text-gray-400"
                    >
                        {blok.project_challenges_body}
                    </p>
                </div>
                <div class="space-y-2">
                    <h3 class="text-2xl font-bold text-center">Experience</h3><p
                        class="text-sm text-gray-500 dark:text-gray-400"
                    >
                        {blok.project_exp_body}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
