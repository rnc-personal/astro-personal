---
import { storyblokEditable, renderRichText } from "@storyblok/astro";
import Divider from "../../components/Divider.astro";

const { blok } = Astro.props;
const renderedRichText = renderRichText(blok.contact_detail_body);
---

<Divider layout="horizontal" />
<div {...storyblokEditable(blok)} class="container px-4 md:px-6">
  <div
    class="flex gap-4 sm:flex-col sm:items-center md:gap-2 lg:gap-4 xl:gap-8">
    {
      blok.contact_detail_image.filename ? (
        <img
          src={
            blok.contact_detail_image
              ? blok.contact_detail_image.filename
              : null
          }
          width="100"
          height="100"
          alt="Image"
          class="object-contain"
          style="aspect-ratio: 100 / 100; object-fit: contain;"
        />
      ) : null
    }

    <div class="grid gap-1.5">
      <h2 class="text-2xl font-bold tracking-tight sm:text-3xl sm:text-center">
        {blok.contact_detail_name}
      </h2>
      <div class="max-w-prose text-black md:text-base/relaxed">
        <span set:html={renderedRichText} class="sm:text-center" />
      </div>
    </div>
  </div>
</div>
